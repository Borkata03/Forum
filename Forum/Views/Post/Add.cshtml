
@using Forum.Core.Models.Post
@using Forum.Core.Models.Thread
@model AddPostFormViewModel

@{
    ViewData["Title"] = "Add Post";
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4 text-black" style="width: 600px;">
        <h2 class="text-center mb-4">📝 Add New Post</h2>

        <form asp-action="Add" method="post" enctype="multipart/form-data">
            <!-- Description -->
            <div class="form-group mb-3">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Write something..."></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <!-- Upload Image -->
            <div class="form-group mb-3">
                <label asp-for="ImageUrl"></label>
                <div class="input-group">
                    <label class="input-group-text btn btn-custom" for="imageUpload">Choose File</label>
                    <input type="file" asp-for="ImageUrl" class="d-none" id="imageUpload" onchange="updateFileName()" />
                    <input type="text" class="form-control" id="fileName" placeholder="No file chosen" readonly />
                </div>
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>

            <!-- Thread Select -->
            <div class="form-group mb-3">
                <label asp-for="ThreadId"></label>
                <select asp-for="ThreadId" class="form-control"
                        asp-items="@(new SelectList(Model.Threads, nameof(ThreadViewModel.Id), nameof(ThreadViewModel.Name)))">
                    <option value="">-- Select Thread --</option>
                </select>
                <span asp-validation-for="ThreadId" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-custom w-50">✍️ Add Post</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        background-color: white;
        border-radius: 20px;
    }

    .btn-custom {
        background-color: grey;
        color: white;
        border-radius: 50px;
        padding: 12px 30px;
        font-size: 1.2rem;
        text-transform: uppercase;
        transition: 0.2s ease-in-out;
        border: none;
    }

        .btn-custom:hover,
        .btn-custom:active {
            background-color: grey;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 87, 34, 0.2);
        }

    .form-control {
        background-color: white;
        color: black;
        border: 1px solid grey;
        border-radius: 10px;
    }

        .form-control:focus {
            color: black;
            background-color: white;
            border: 2px solid grey !important;
            outline: none !important;
            box-shadow: none !important;
        }

        .form-control::placeholder {
            color: grey;
        }

    label {
        color: black;
    }
</style>

<script>
    function updateFileName() {
        const fileInput = document.getElementById('imageUpload');
        const fileNameField = document.getElementById('fileName');
        fileNameField.value = fileInput.files.length > 0 ? fileInput.files[0].name : 'No file chosen';
    }
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
