@model PostAllViewModel

@{
    ViewData["Title"] = "Post Details";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .post-container {
        max-width: 700px;
        margin: 3rem auto;
        background-color: #2d2d2d;
        border-radius: 1.25rem;
        box-shadow: 0 4px 12px rgba(255, 255, 255, 0.2);
        overflow: hidden;
    }

    .post-header {
        padding: 1.5rem;
        text-align: center;
        background-color: grey;
    }

    .post-img {
        width: 100%;
        height: 350px;
        object-fit: cover;
    }

    .post-description {
        font-size: 1.2rem;
        font-style: italic;
        color: #000;
        margin: 1rem 0;
    }

    .post-date {
        font-size: 0.875rem;
        color: #444;
        margin-bottom: 1rem;
    }

    .comment-section {
        padding: 1.5rem;
        background-color: #1f1f1f;
    }

    .comment {
        border-bottom: 1px solid #444;
        padding: 1rem 0;
    }

        .comment:last-child {
            border-bottom: none;
        }

    .comment-content {
        font-size: 1rem;
        color: #ddd;
    }

    .comment-meta {
        font-size: 0.8rem;
        color: #888;
        margin-top: 0.25rem;
    }

    .comment-btn {
        display: block;
        border-radius: 50px;
        margin: 2rem auto 1rem;
        width: 60%;
        padding: 0.75rem 2rem;
        font-size: 1.2rem;
        background-color: white;
        color: black;
        border: none;
        transition: transform 0.2s ease-in-out, background-color 0.2s;
        text-align: center;
    }

        .comment-btn:hover {
            transform: scale(1.05);
            background-color: #f1f1f1;
        }
</style>

<h2 class="text-center my-4">📌 Post Details</h2>

<div class="post-container">
    <img src="@Model.ImageUrl" alt="Post Image" class="post-img" />

    <div class="post-header">
        <p class="post-description">@Model.Description</p>
        <p class="post-date">Posted on: @Model.CreatedAt</p>

        @if (User.Identity.IsAuthenticated)
        {
            <a href="/Comment/Create?postId=@Model.Id" class="btn comment-btn">💬 Add a Comment</a>
        }
        else
        {
            <a href="/Identity/Account/Login" class="btn comment-btn">🔒 Login to Comment</a>
        }
    </div>

    <div class="comment-section">
        <h4>🗨 Comments (@Model.Comments.Count)</h4>

        @if (!Model.Comments.Any())
        {
            <p class="text-muted mt-2">No comments yet. Be the first to comment!</p>
        }
        else
        {
            @foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    <div class="comment-content">@comment.Content</div>
                    <div class="comment-meta">Posted by: @comment.UserName </div>
                </div>
            }
        }
    </div>
</div>
