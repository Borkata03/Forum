@model IEnumerable<PostAllViewModel>

@{
    ViewData["Title"] = "Dashboard";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
        margin: 0;
        padding: 0;
    }

    .sidebar {
        background-color: #1c1c1c;
        height: 100vh;
        padding: 2rem 1rem 5rem;
        position: fixed;
        width: 250px;
        top: 0;
        left: 0;
        display: flex;
        flex-direction: column;
        justify-content: space-between;
    }

    .nav-section h4 {
        color: #fff;
        margin-bottom: 1rem;
    }

    .sidebar a {
        display: block;
        background-color: #444;
        color: white;
        border: none;
        width: 100%;
        padding: 1rem;
        margin-bottom: 1rem;
        border-radius: 10px;
        font-size: 1rem;
        text-align: left;
        text-decoration: none;
        transition: background-color 0.2s ease;
    }

    .sidebar a:hover {
        background-color: #666;
    }

    .logout-btn {
        background-color: #dc3545;
        color: white;
        width: 100%;
        padding: 1rem;
        border: none;
        border-radius: 12px;
        font-size: 1rem;
        cursor: pointer;
    }

    .logout-btn:hover {
        background-color: #c82333;
    }

    .content-area {
        margin-left: 270px;
        padding: 2rem;
    }

    .post-card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        border-radius: 1.25rem;
        overflow: hidden;
        background-color: #2d2d2d;
        margin-bottom: 2rem;
        width: 100%;
    }

    .post-img {
        object-fit: cover;
        height: 350px;
        width: 100%;
    }

    .post-body {
        padding: 1.5rem;
        background-color: grey;
    }

    .post-desc {
        color: #000;
        font-size: 1.1rem;
        font-style: italic;
        text-align: center;
        margin-bottom: 10px;
    }

    .post-date {
        color: #333;
        font-size: 0.9rem;
        text-align: center;
        font-style: italic;
    }

    .post-btn {
        border-radius: 50px;
        width: 100%;
        padding: 1rem 2rem;
        font-size: 1.25rem;
        background-color: white;
        color: black;
        border: none;
        transition: transform 0.2s ease-in-out, background-color 0.2s;
    }

    .post-btn:hover {
        transform: scale(1.05);
        background-color: #f1f1f1;
    }

    /* Modal Styles */
    .modal-overlay {
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        background: rgba(0, 0, 0, 0.75);
        display: none;
        justify-content: center;
        align-items: center;
        z-index: 9999;
    }

    .modal-content {
        background-color: #1c1c1c;
        color: white;
        padding: 2rem;
        border-radius: 12px;
        width: 90%;
        max-width: 400px;
        text-align: center;
        box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
    }

    .modal-content button {
        padding: 0.75rem 1.5rem;
        margin: 0 0.5rem;
        border: none;
        border-radius: 10px;
        cursor: pointer;
        font-size: 1rem;
    }

    .confirm-btn {
        background-color: #28a745;
        color: white;
    }

    .cancel-btn {
        background-color: #6c757d;
        color: white;
    }

    .confirm-btn:hover {
        background-color: #218838;
    }

    .cancel-btn:hover {
        background-color: #5a6268;
    }
</style>

<div class="sidebar">
    <div class="nav-section">
        <h4>📬 Posts</h4>
        <a href="/Post/Add">➕ Add Post</a>
        <a href="/Post/Mine">👤 My Posts</a>
        <a href="/Post/All">🌍 All Posts</a>

        <h4>🧵 Threads</h4>
        <a href="/Thread/Add">➕ Add Thread</a>
        <a href="/Thread/All">📜 All Threads</a>
    </div>

    <!-- 🚪 Logout Button at the Bottom -->
    <button class="logout-btn" onclick="showLogoutModal()">🚪 Logout</button>
</div>

<div class="content-area">
    <h2 class="text-center my-4">📝 All Posts</h2>

    @foreach (var post in Model)
    {
            <div class="post-card">
                <img src="@post.ImageUrl" alt="Post Image" class="post-img" />
                <div class="post-body">
                    <p class="post-desc">@post.Description</p>
                    <p class="post-date">@DateTime.Parse(post.CreatedAt).ToString("dd MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>

                @if (User.Identity.IsAuthenticated)
                {
                            <a href="/Comments/Create" class="btn post-btn mt-2">💬 Comment</a>
                }
                else
                {
                            <a href="/Identity/Account/Login" class="btn post-btn mt-2">🔒 Login to Comment</a>
                }
                </div>
            </div>
    }
</div>

<!-- Logout Modal -->
<div class="modal-overlay" id="logoutModal">
    <div class="modal-content">
        <h2>Confirm Logout</h2>
        <p>Are you sure you want to log out?</p>
        <div style="margin-top: 1.5rem;">
            <form id="logoutForm" method="post" asp-area="Identity" asp-page="/Account/Logout">
                <button type="submit" class="confirm-btn">✅ Yes, Log Out</button>
                <button type="button" class="cancel-btn" onclick="hideLogoutModal()">❌ Cancel</button>
            </form>
        </div>
    </div>
</div>

<script>
    function showLogoutModal() {
        document.getElementById('logoutModal').style.display = 'flex';
    }

    function hideLogoutModal() {
        document.getElementById('logoutModal').style.display = 'none';
    }
</script>
