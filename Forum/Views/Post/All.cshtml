@model IEnumerable<PostAllViewModel>

@{
    ViewData["Title"] = "All Posts";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .post-card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        border-radius: 1.25rem;
        overflow: hidden;
        background-color: #2d2d2d;
    }

    .post-img {
        object-fit: cover;
        height: 250px;
        width: 100%;
    }

    .post-body {
        padding: 1.5rem;
        background-color: grey;
    }

    .post-desc {
        color: #000000;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        text-align: center;
        margin-bottom: 10px;
        font-style: italic;
    }

    .post-date {
        color: #333;
        font-size: 0.875rem;
        font-weight: 400;
        text-align: center;
        margin-top: 5px;
        font-style: italic;
    }

    .post-btn {
        border-radius: 50px;
        width: 100%;
        padding: 1rem 2rem;
        font-size: 1.25rem;
        background-color: white;
        color: black;
        border: none;
        transition: transform 0.2s ease-in-out, background-color 0.2s;
    }

        .post-btn:hover {
            transform: scale(1.05);
            background-color: #f1f1f1;
        }
</style>

<h2 class="text-center my-5">📝 All Posts</h2>

<div class="container">
    <div class="row">
        @foreach (var post in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="post-card">
                    <img src="@post.ImageUrl" alt="Post Image" class="post-img">
                    <div class="post-body">
                        <p class="post-desc">@post.Description</p>
                        <p class="post-date">@DateTime.Parse(post.CreatedAt).ToString("dd MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>

                        @if (User.Identity.IsAuthenticated)
                        {
                            <a href="/Comments/Create" class="btn post-btn mt-2">💬 Comment</a>
                        }
                        else
                        {
                            <a href="/Identity/Account/Login" class="btn post-btn mt-2">🔒 Login to Comment</a>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
