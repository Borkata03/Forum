@model PostAllViewModel

@{
    ViewData["Title"] = "Delete Post";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .delete-container {
        max-width: 600px;
        margin: 5rem auto;
        padding: 2rem;
        background-color: #2d2d2d;
        border-radius: 1.25rem;
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        text-align: center;
    }

    .delete-container img {
        max-width: 100%;
        height: auto;
        border-radius: 1rem;
        margin-bottom: 1rem;
    }

    .delete-desc {
        color: #ddd;
        font-size: 1.25rem;
        margin-bottom: 1rem;
    }

    .delete-btn {
        padding: 0.75rem 2rem;
        border-radius: 50px;
        font-size: 1.25rem;
        margin: 0.5rem;
        border: none;
        transition: transform 0.2s ease-in-out;
    }

    .confirm-btn {
        background-color: #ff4d4d;
        color: white;
    }

    .confirm-btn:hover {
        background-color: #ff1a1a;
        transform: scale(1.05);
    }

    .cancel-btn {
        background-color: white;
        color: black;
    }

    .cancel-btn:hover {
        background-color: #f1f1f1;
        transform: scale(1.05);
    }
</style>

<div class="delete-container">
    <h2>⚠️ Are you sure you want to delete this post?</h2>
    <img src="@Model.ImageUrl" alt="Post Image">
    <p class="delete-desc">@Model.Description</p>
    <p class="post-date">@DateTime.Parse(Model.CreatedAt).ToString("dd MMM yyyy", System.Globalization.CultureInfo.InvariantCulture)</p>

    <form method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="delete-btn confirm-btn">Yes, Delete</button>
        <a href="/Post/Mine" class="delete-btn cancel-btn">Cancel</a>
    </form>
</div>
