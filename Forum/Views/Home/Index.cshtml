@{
    ViewData["Title"] = "Home";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .home-card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        border-radius: 1.25rem;
        background-color: #2d2d2d;
        padding: 2rem;
        max-width: 600px;
        margin: 100px auto;
        text-align: center;
    }

    .home-title {
        font-size: 2.5rem;
        color: #ffffff;
        margin-bottom: 1rem;
    }

    .home-text {
        font-size: 1.2rem;
        color: #cccccc;
        margin-bottom: 2rem;
        font-style: italic;
    }

    .home-btn {
        border-radius: 50px;
        padding: 1rem 2rem;
        font-size: 1.25rem;
        background-color: white;
        color: black;
        border: none;
        transition: transform 0.2s ease-in-out, background-color 0.2s;
        margin: 0 10px;
    }

        .home-btn:hover {
            transform: scale(1.05);
            background-color: #f1f1f1;
        }
</style>

<div class="home-card">
    <h1 class="home-title">Welcome to Our Community</h1>
    <p class="home-text">Connect, share, and explore the latest posts and discussions.</p>

    <div class="text-center mt-5">
        <a asp-area="Identity" asp-page="/Account/Login" class="btn home-btn mx-2">🔐 Login</a>
        <a asp-area="Identity" asp-page="/Account/Register" class="btn home-btn mx-2">📝 Register</a>
        <a asp-controller="Post" asp-action="All" class="btn home-btn mt-4">🧾 View Posts</a>
    </div>



</div>
