    <!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Forum</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Forum.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light ">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Post" asp-action="All">
                    <img src=~/logo.png style="height: 40px;  border-radius: 50%;" />
                
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        
                        @if (this.User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown ms-lg-1 d-flex justify-content-center">
                                <button class="btn btn-secondary btn-sm dropdown-toggle rounded-pill text-white" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Threads
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <div class="ms-lg-1 d-flex justify-content-center">
                                        <a href="@Url.Action("Add", "Thread")" class="btn btn-secondary btn-sm rounded-pill text-white">
                                            ✍️ Add New Thread
                                        </a>
                                    </div>
                                    <div class="mt-2 d-flex justify-content-center">
                                        <a href="@Url.Action("All", "Thread")" class="btn btn-secondary btn-sm rounded-pill  text-white">
                                            👀 View All Threads
                                        </a>
                                    </div>
                                </ul>
                            </div>

                            <div class="dropdown ms-lg-1 d-flex justify-content-center">
                                <button class="btn btn-secondary btn-sm dropdown-toggle rounded-pill text-white" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                    Post
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    <div class="ms-lg-1 d-flex justify-content-center">
                                        <a href="@Url.Action("Add", "Post")" class="btn btn-secondary btn-sm rounded-pill text-white">
                                            ✍️ Add New Post
                                        </a>
                                    </div>
                                    <div class="mt-2 d-flex justify-content-center">
                                        <a href="@Url.Action("All", "Post")" class="btn btn-secondary btn-sm rounded-pill  text-white">
                                            👀 View All Posts
                                        </a>
                                    </div>
                                    <div class="mt-2 d-flex justify-content-center">
                                        <a href="@Url.Action("Mine", "Post")" class="btn btn-secondary btn-sm rounded-pill  text-white">
                                            My Posts
                                        </a>
                                    </div>
                                </ul>
                            </div>



                        }

                    </ul>
                    <partial name="_LoginPartial" />
                </div>            </div>
        </nav>
    </header>
    <style>
        body > header > nav > div{
            background: linear-gradient(45deg, #808080, #000000, #ffffff);
            color: white;
            font-family: Arial, sans-serif;
        }

        body > header > nav{
            background: linear-gradient(45deg, #808080, #000000, #ffffff);
            color: white;
            font-family: Arial, sans-serif;
        }

            body > header > nav > div > div > ul:nth-child(2) > li:nth-child(2) > form > button{
                color: black !important;
                transition: background-color 0.3s ease, transform 0.3s ease;
                font-size: 14px;
                font-weight: bold;
                text-transform: uppercase;
                letter-spacing: 1px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-style: italic;
            }

            body > header > nav > div > div > ul:nth-child(2) > li:nth-child(2) > a{
                color: black !important;
                transition: background-color 0.3s ease, transform 0.3s ease;
                font-size: 14px;
                font-weight: bold;
                text-transform: uppercase;
                letter-spacing: 1px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-style: italic;
            }

            }

            body > header > nav > div > div > ul:nth-child(2) > li:nth-child(1) {
            color: black !important;
            transition: background-color 0.3s ease, transform 0.3s ease;
            font-size: 14px;
            font-weight: bold;
            text-transform: uppercase;
            letter-spacing: 1px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-style: italic;
            }
 
            body > header > nav > div > div > ul:nth-child(2) > li:nth-child(1) > a{
                color: black !important;
                transition: background-color 0.3s ease, transform 0.3s ease;
                font-size: 14px;
                font-weight: bold;
                text-transform: uppercase;
                letter-spacing: 1px;
                display: flex;
                justify-content: center;
                align-items: center;
                font-style: italic;
            }

           




           
    </style>
  
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container d-flex justify-content-center">
            &copy; 2025 - Forum
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
