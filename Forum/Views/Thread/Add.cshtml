@model Forum.Core.Models.Thread.AddThreadViewModel
@{
    ViewData["Title"] = "Create New Thread";
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4 text-black" style="width: 750px;">
        <h2 class="text-center mb-4">📝 Create New Thread</h2>

        <form method="post">
            <div class="mb-3">
                <label for="Name" class="form-label">Thread Name</label>
                <input type="text" class="form-control" id="Name" name="Name" required />
            </div>

            <div class="mb-3">
                <label for="CategoryId" class="form-label">Category</label>
                <select class="form-control" id="CategoryId" name="CategoryId" required>
                    <option value="">Select Category</option>
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-custom">➕ Create Thread</button>
            </div>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        background-color: white;
        border-radius: 20px;
    }

    .btn-custom {
        background-color: grey;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 1rem;
        text-transform: uppercase;
        transition: 0.2s ease-in-out;
        border: none;
    }

        .btn-custom:hover,
        .btn-custom:active {
            background-color: grey;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 87, 34, 0.2);
        }

    .form-label {
        font-weight: bold;
        color: #333;
    }

    .form-control {
        border-radius: 12px;
        padding: 10px;
    }

    .mb-3 {
        margin-bottom: 1.5rem;
    }

    h2 {
        color: black;
        font-family: 'Lobster', sans-serif;
    }
</style>
