@model IEnumerable<Forum.Core.Models.Thread.AllThreadsViewModel>
@{
    ViewData["Title"] = "All Threads";
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4 text-black" style="width: 750px;">
        <h2 class="text-center mb-4">💬 All Threads</h2>

        @if (!Model.Any())
        {
            <p class="text-center">No threads available.</p>
        }
        else
        {
            <ul class="list-group">
                @foreach (var thread in Model)
                {
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1">@thread.Name</h5>
                            <small class="text-muted">📅 @thread.CreatedDate | 🗂️ @thread.Category</small>
                        </div>
                  
                    </li>
                }
            </ul>
        }

        <div class="text-center mt-4">
            <a asp-controller="Thread" asp-action="Add" class="btn btn-custom">➕ Create New Thread</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        background-color: white;
        border-radius: 20px;
    }

    .btn-custom {
        background-color: grey;
        color: white;
        border-radius: 50px;
        padding: 10px 20px;
        font-size: 1rem;
        text-transform: uppercase;
        transition: 0.2s ease-in-out;
        border: none;
    }

        .btn-custom:hover,
        .btn-custom:active {
            background-color: grey;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 87, 34, 0.2);
        }

    .list-group-item {
        background-color: #f8f9fa;
        border: none;
        border-radius: 12px;
        margin-bottom: 10px;
    }

    h5 {
        margin-bottom: 0.2rem;
        color: black;
    }

    small {
        color: gray;
    }
</style>
