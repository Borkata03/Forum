@model IEnumerable<Forum.Core.Models.Thread.AllThreadsViewModel>

@{
    ViewData["Title"] = "All Threads";
}

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .table th,
    .table td {
        color: black;
        background-color: white;
        font-style: italic;
    }

    .table thead {
        background-color: #343a40;
        color: white;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
    }

    .card-header {
        background-color: #6c757d;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="card shadow-lg rounded-4 border border-secondary">
                <div class="card-header text-white text-center rounded-top-4">
                    <h3 class="mb-0">📌 All Threads</h3>
                </div>
                <div class="card-body p-4">
                    @if (Model != null && Model.Any())
                    {
                        <table class="table table-striped table-hover text-center align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th scope="col">🧵 Thread Name</th>
                                    <th scope="col">📅 Created Date</th>
                                    <th scope="col">📂 Category</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var thread in Model)
                                {
                                    <tr>
                                        <td>@thread.Name</td>
                                        <td>@thread.CreatedDate</td>
                                        <td>@thread.Category</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    }
                    else
                    {
                        <div class="alert alert-info text-center" role="alert">
                            No threads found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
