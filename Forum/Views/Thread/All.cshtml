@page
@using Forum.Areas.Identity.Pages.Account
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4" style="width: 400px;">
        <h2 class="text-center">Log in</h2>
        <form id="account" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <button type="submit" class="w-100 btn btn-dark">Log in</button>
        </form>
    </div>
</div>

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
    }

    .card-header {
        background-color: #6c757d;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
