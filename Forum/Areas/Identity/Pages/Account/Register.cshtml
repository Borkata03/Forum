@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="d-flex justify-content-center align-items-center mt-5">
    <div class="card p-4 text-black" style="width: 400px;">
        <h2 class="text-center mb-4">📝 Register</h2>

        <form method="post" asp-route-returnUrl="@Model.ReturnUrl">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-group mb-3">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" type="password" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Input.ConfirmPassword"></label>
                <input asp-for="Input.ConfirmPassword" class="form-control" type="password" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom w-100">Register</button>
        </form>

        <div class="mt-3 text-center">
            <a asp-page="./Login">🔐 Already have an account? Login</a>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(45deg, #808080, #000000, #ffffff);
        color: white;
        font-family: Arial, sans-serif;
    }

    .card {
        box-shadow: 0 2px 10px rgba(255, 255, 255, 0.5);
        background-color: white;
        border-radius: 20px;
    }

    .btn-custom {
        background-color: grey;
        color: white;
        border-radius: 50px;
        padding: 12px 30px;
        font-size: 1.2rem;
        text-transform: uppercase;
        transition: 0.2s ease-in-out;
        border: none;
    }

        .btn-custom:hover,
        .btn-custom:active {
            background-color: grey;
            color: white;
            transform: scale(1.05);
            box-shadow: 0 4px 20px rgba(255, 87, 34, 0.2);
        }

    .form-control {
        background-color: white;
        color: black;
        border: 1px solid grey;
        border-radius: 10px;
    }

        .form-control:focus {
            color: black;
            background-color: white;
            border: 2px solid grey !important;
            outline: none !important;
            box-shadow: none !important;
        }

        .form-control::placeholder {
            color: grey;
        }

    label {
        color: black;
    }

    a {
        color: black;
        text-decoration: none;
    }

        a:hover {
            color: grey;
            text-decoration: none;
        }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
